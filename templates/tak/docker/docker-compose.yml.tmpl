version: "3.3"

networks:
  taknet:
    ipam:
      driver: default
      config:
        - subnet: __DOCKER_SUBNET

volumes:
  tak_data:

services:
  tak-db:
    build:
      context: .
      dockerfile: ./docker/Dockerfile.takserver-db
    volumes:
      - "tak_data:/var/lib/postgresql/data"
      - "./tak:/opt/tak:z"
    networks:
      taknet:
        aliases:
          - __DATABASE_ALIAS
    ports:
      - "5432:5432"
    restart: always
  tak-server:
    build:
      context: .
      dockerfile: ./docker/Dockerfile.takserver
    env_file:
      - .env
    volumes:
      - "./tak:/opt/tak:z"
    ports:
      - "8443:8443"
      - "8446:8446"
      - "8089:8089"
      - "9000:9000"
      - "9001:9001"
    networks:
      taknet:
    depends_on:
      - tak-db
    restart: always
